    "fastify": "^4.25.2",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
